<!DOCTYPE html>
<html>
<% include partials/head %>
<% include partials/header %>
<% include partials/navbar %>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Login</h1>
        <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-warning">
            <%= message %>
        </div>
        <% } %>
        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>
            <!--<div class="form-group">
                <div class="g-recaptcha" data-sitekey="6LdJByQTAAAAANS8XkjlNFggN77IHrJnMiKX6bdB"></div>
            </div>-->
            <button type="submit" class="btn btn-sm btn-primary">Login</button>

            <div id="login-img-buttons">
                <a href="/login/facebook"><img id="login-img" src="/img/login/facebook.png"></a>
                <a href="/login/google"><img id="login-img" src="/img/login/googleplus.png"></a>
                <a href="/login/twitter"><img id="login-img" src="/img/login/twitter.png"></a>
                <a href="/login/xing"><img id="login-img" src="/img/login/xing.png"></a>
            </div>
        </form>
        <hr>
        <p>Brauchen Sie einen Account? <a href="/signup">Signup</a></p>
        <p>Haben Sie Ihr Passwort vergessen? <a href="/login/reset-password">Passwort zur√ºcksetzen</a></p>
    </div>

</div>
</div>
</body>
<% include partials/footer %>
</html>
