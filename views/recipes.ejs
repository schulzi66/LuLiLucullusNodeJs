<!DOCTYPE html>
<html>
<% include partials/head %>
<% include partials/header %>
<% include partials/navbar %>
<body>
<div class="container container-margin">
    <% include partials/breadcrumb %>
    <div class="row">
        <section class="col-sm-6">
            <div class="btn-group">
                <button id="recipe-filter" class="btn btn-sm text-uppercase text-spat">
                    Filter
                </button>
            </div>
        </section>
    </div>

    <div id="filter-bar" class="container" style="display:block">
        <div id="inputFields" class="col-md-6">
            <h4>Filtern</h4>
            <script type="text/javascript">
                loadFilterOptions();
            </script>
        </div>
        <div id="filterRightColumn" class="col-md-6">
            <h4>Sortieren</h4>

            <div class="btn-group-vertical sortBtnGroup" role="group">
                <button id="sortNameBtn" class="btn btn-sm text-uppercase text-spat sortBtn" data-sorted="none">Name</button>
                <button id="sortPriceBtn" class="btn btn-sm text-uppercase text-spat sortBtn" data-sorted="none">Preis</button>
            </div>
            <div id="filterSubmitBox">
                <button id="filterSubmitBtn" class="btn btn-sm text-uppercase text-spat">
                    Aktualisieren
                </button>
            </div>
        </div>
    </div>

    <hr>

    <div class="row" id="recipeContainer">
        <script>
            loadRecipesOverview();
        </script>
    </div>
</div>
</body>
<% include partials/footer %>
</html>
