<!DOCTYPE html>
<html>
<% include partials/head %>
<% include partials/adminHeader %>

<body>
<div class="container">
    <% include partials/breadcrumb %>
    <div class="col-sm-8 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Neuer Mitarbeiter</h1>
        <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-warning">
            <%= message %>
        </div>
        <% } %>
        <form action="/administration/newEmployee" method="post">
            <div class="form-group">
                <label for="name" class="control-label">Name</label>
                <input type="text" class="form-control" name="familyName" placeholder="Name" required
                       pattern="^[a-zA-Z]+$">
            </div>
            <div class="form-group">
                <label for="vorname" class="control-label">Vorname</label>
                <input type="text" class="form-control" name="name" placeholder="Vorname" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="employeeID" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label>Telefon</label>
                <input type="text" class="form-control" name="telefonNumber" placeholder="Telefon" required
                       pattern="([0|\+[0-9]{1,5})?([0-9]{9})$">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" required
                       pattern="?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$">
            </div>
            <div class="form-group">
                <label for="adresse" class="control-label">Adresse</label>
                <input type="text" class="form-control" id="street" name="street" placeholder="Stra&szlig;e + HNr"
                       value="" required>
                <input type="text" class="form-control" id="plz" name="plz" placeholder="PLZ" value="" required>
                <input type="text" class="form-control" id="ort" name="location" placeholder="Wohnort" value=""
                       required>
            </div>
            <div class="from-group">
                <div class="checkbox">
                    <label><input id="isAdmin" name="isAdmin" type="checkbox" value="">Administrator</label>
                </div>
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Erstellen</button>
        </form>
        <hr>
    </div>
</div>
</body>
</html>