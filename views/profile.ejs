<!DOCTYPE html>
<html>
<% include partials/head %>
<% include partials/header %>
<% include partials/navbar %>
<body>
<div class="container container-margin">

    <div class="col-sm-10 col-sm-offset-1">

        <h1><span class="fa fa-user"></span> Profile</h1>

        <form class="form-horizontal" action="/login/profile" method="post">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                    <% if (user.familyName) { %>
                      <div class="col-sm-10">
                    <input class="form-control" rows="4" name="familyName" value="<%= user.familyName %>">
                    <% } else { %>
                    <input class="form-control" rows="4" placeholder="Name" name="familyName">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Vorname</label>
                <div class="col-sm-10">
                    <% if (user.name) { %>
                    <input class="form-control" rows="4" name="name" value="<%= user.name %>">
                    <% } else { %>
                    <input class="form-control" rows="4" placeholder="Vorname" name="name">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <% if (user.userID) { %>
                    <input class="form-control" rows="4" name="email" type="email" readonly value="<%= user.userID %>">
                    <% } else { %>
                    <input class="form-control" rows="4" name="email" type="email" placeholder="example@domain.com">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" readonly class="form-control" id="password" name="password" placeholder="Password"
                           value="************">
                </div>
            </div>
            <div class="form-group">
                <label for="telefon" class="col-sm-2 control-label">Telefon</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="telefon" name="telefonNumber" placeholder="Telefon"
                           value="<%= user.telefonNumber %>">
                </div>
            </div>
            <div class="form-group">
                <label for="lieferadresse" class="col-sm-2 control-label">Lieferadresse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="street" name="street" placeholder="Stra&szlig;e + HNr"
                           value="<%= user.street %>">
                    <input type="text" class="form-control" id="plz" name="plz" placeholder="PLZ"
                           value=" <%= user.plz %>">
                    <input type="text" class="form-control" id="ort" name="location" placeholder="Wohnort"
                           value="<%= user.location %> ">
                </div>
            </div>
            <div class="form-group">
                <label for="rechnungsadresse" class="col-sm-2 control-label">Rechnungsadresse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="rech_street" name="billingAdressStreet"
                           placeholder="Stra&szlig;e + HNr"
                           value="<%= user.billingAdressStreet %>">
                    <input type="text" class="form-control" id="rech_plz" name="billingAdressPlz" placeholder="PLZ"
                           value="<%= user.billingAdressPlz %>">
                    <input type="text" class="form-control" id="rech_ort" name="billingAdressLocation" placeholder="Wohnort"
                           value="<%= user.billingAdressLocation %>">
                </div>
            </div>
            <div class="form-group">
                <label for="internal" class="col-sm-2 control-label">Internal</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="internal" name="internal" readonly
                           value="<%= user.internal %>">
                </div>
            </div>
            <!--<div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <div class="g-recaptcha" data-sitekey="6LdJByQTAAAAANS8XkjlNFggN77IHrJnMiKX6bdB"></div>
                </div>
            </div>-->
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input id="submit" name="submit" type="submit" value="Speichern" class="btn btn-primary">
                    <input id="submit" name="submit" type="submit" href="/logout" value="Logout" class="btn btn-sm btn-primary">
                </div>
            </div>
        </form>

    </div>

</div>
</div>
</body>
<% include partials/footer %>
</html>
