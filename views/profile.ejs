<!DOCTYPE html>
<html>
<% include partials/head %>
<% include partials/header %>
<% include partials/navbar %>
<body>
<div class="container container-margin">

    <div class="col-sm-10 col-sm-offset-1">

        <h1><span class="fa fa-user"></span> Profile</h1>

        <form class="form-horizontal" action="/login/profile" method="post">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <% if (user.name) { %>
                    <input class="form-control" rows="4" name="name" value="<%= user.name %>">
                    <% } else { %>
                    <input class="form-control" rows="4" placeholder="Name" name="name">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Vorname</label>
                <div class="col-sm-10">
                    <% if (user.vorname) { %>
                    <input class="form-control" rows="4" name="vorname" value="<%= user.vorname %>">
                    <% } else { %>
                    <input class="form-control" rows="4" placeholder="Vorname" name="vorname">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <% if (user.email) { %>
                    <input class="form-control" rows="4" name="email" type="email" readonly value="<%= user.email %>">
                    <% } else { %>
                    <input class="form-control" rows="4" name="email" type="email" placeholder="example@domain.com">
                    <% } %>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                           value="">
                </div>
            </div>
            <div class="form-group">
                <label for="telefon" class="col-sm-2 control-label">Telefon</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="telefon" name="tel" placeholder="Telefon"
                           value="<%= user.telefon %>">
                </div>
            </div>
            <div class="form-group">
                <label for="lieferadresse" class="col-sm-2 control-label">Lieferadresse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="street" name="street" placeholder="Stra&szlig;e + HNr"
                           value="<% user.lieferadresse_str %>">
                    <input type="text" class="form-control" id="plz" name="plz" placeholder="PLZ"
                           value=" <% user.lieferadresse_plz %>">
                    <input type="text" class="form-control" id="ort" name="ort" placeholder="Wohnort"
                           value="<% user.lieferadresse_ort %> ">
                </div>
            </div>
            <div class="form-group">
                <label for="rechnungsadresse" class="col-sm-2 control-label">Rechnungsadresse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="rech_street" name="rech_street"
                           placeholder="Stra&szlig;e + HNr"
                           value="<% user.rechnungsadresse_str %>">
                    <input type="text" class="form-control" id="rech_plz" name="rech_plz" placeholder="PLZ"
                           value="<% user.rechnungsadresse_plz %>">
                    <input type="text" class="form-control" id="rech_ort" name="rech_ort" placeholder="Wohnort"
                           value="<% user.rechnungsadresse_ort %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <div class="g-recaptcha" data-sitekey="6LdJByQTAAAAANS8XkjlNFggN77IHrJnMiKX6bdB"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input id="submit" name="submit" type="submit" value="Speichern" class="btn btn-primary">
                </div>
            </div>
        </form>

    </div>

</div>
</div>
</body>
<% include partials/footer %>
</html>