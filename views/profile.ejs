<% include partials/head %>
<% include partials/header %>

<form class="form-horizontal" role="form" method="post" action="">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <%if (user.displayName) {%>
                <input class="form-control" rows="4" name="name" value="<%= user.displayName %>">
            <% } else { %>
                <input class="form-control" rows="4" placeholder="Name"name="name">
            <% } %>
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <%if (user.emails) {%>
            <input class="form-control" rows="4" name="email" value="<%= user.emails[0].value %>">
            <% } else { %>
            <input class="form-control" rows="4" placeholder="example@domain.com"name="email">
            <% } %>
        </div>
    </div>
    <div class="form-group">
        <label for="lieferadresse" class="col-sm-2 control-label">Lieferadresse</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="street" name="street" placeholder="Stra&szlig;e + HNr" value="">
            <input type="email" class="form-control" id="plz" name="plz" placeholder="PLZ" value="">
            <input type="email" class="form-control" id="ort" name="ort" placeholder="Wohnort" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="rechnungsadresse" class="col-sm-2 control-label">Rechnungsadresse</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="street" name="street" placeholder="Stra&szlig;e + HNr" value="">
            <input type="email" class="form-control" id="plz" name="plz" placeholder="PLZ" value="">
            <input type="email" class="form-control" id="ort" name="ort" placeholder="Wohnort" value="">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="g-recaptcha" data-sitekey="6LdJByQTAAAAANS8XkjlNFggN77IHrJnMiKX6bdB"></div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="Speichern" class="btn btn-primary">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
        </div>
    </div>
</form>